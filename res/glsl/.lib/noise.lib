vec2 grad(vec2 g, vec2 p) {
    return g * (2.0 * p - 1.0);
}

vec3 grad(vec3 g, vec3 p) {
    return g * (2.0 * p - 1.0);
}

vec4 grad(vec4 g, vec4 p) {
    return g * (2.0 * p - 1.0);
}


