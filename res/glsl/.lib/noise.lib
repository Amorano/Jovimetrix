// Dithered noise
float lib_noise_dithered(vec2 p) {
    float base = lib_noise_perlin(p);
    float dither = fract(sin(dot(floor(p), vec2(12.9898, 78.233))) * 43758.5453123);
    return base + dither * 0.5;
}

//------------------------------------------------------------------------------
// RANDOM VALUE
