#define MAX_OCTAVES 12

float lib_noise_fbm(vec2 x, float H, int octaves)
{
    float G = exp2(-H);
    float f = 1.0;
    float a = 1.0;
    float t = 0.0;
    octaves = min(octaves, MAX_OCTAVES);
    for( int i=0; i < octaves; i++ )
    {
        t += a * lib_noise_rand(f*x);
        f *= 2.0;
        a *= G;
    }
    return t;
}

float lib_noise_fbm(vec3 x, float H, int octaves)
{
    float G = exp2(-H);
    float f = 1.0;
    float a = 1.0;
    float t = 0.0;
    octaves = min(octaves, MAX_OCTAVES);
    for( int i=0; i<octaves; i++ )
    {
        t += a * lib_noise_rand(f*x);
        f *= 2.0;
        a *= G;
    }
    return t;
}

